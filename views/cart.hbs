<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Shopping Cart</h2>
    </div>
  </div>
  <div class="row">
    {{#each cartItems}}
    <div class="col-md-12">
      <div class="thumbnail">
        <img src="{{this.product.img}}">
        <div class="caption">
          <h3>{{Product.name}}</h3>
          <p class="price">${{Product.price}}</p>
          <p>
          <form method="POST" action="/cart/{{Product.id}}/?_method=PUT">
            <p>quantity: {{quantity}}</p>
            <input type="hidden" value={{Product.id}} name="itemId">
            <select class="form-control" id="quantity" name="quantity">
              <option selected>{{quantity}}</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
            <button class="btn btn-primary" type="submit" value="Submit">Update Quantity</button>
          </form>
          <a href="/products/{{Product.id}}" class="btn btn-default" role="button">View Product</a> 
          <form method="POST" action="/cart/{{Product.id}}?_method=DELETE">
            <button class="btn btn-default" type="submit" value="Submit">Remove From Cart</button>
            <input type="hidden" value={{quantity}} name="quantity">
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="row">
    <a href="/order" class="btn btn-primary">Checkout</a>
  </div>
</div>
