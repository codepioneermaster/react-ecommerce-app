<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">View By Category</div>
        <div class="panel-body">
          <div class="list-group text-center">
            {{#each categories}}
            <form method="post" action="/products/category/{{name}}">
              <input type="hidden" name="categoryId" value="{{id}}">
              <button class="btn btn-default btn-block" type="submit" value="Submit">
              {{name}}
              </button>
            </form>
            {{/each}}
         </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
    {{#grouped_each 3 products}}
      <div class="row">
        {{#each this}}
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <a href="/products/{{id}}">
              <img alt="{{name}}" src="{{img}}"></a>
              <div class="caption">
              <h3>{{name}}</h3>
              <p class="price">${{price}}</p>
              <form method="POST" action="/cart/{{id}}">
              <label for="quantity">Select quantity</label>
                <select class="form-control product-dropdown" id="quantity" name="quantity">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
                <button class="btn btn-default noPad" type="submit" value="Submit">Add To Cart</button>
                </form>
              <p><a href="/products/{{id}}" class="btn btn-primary btn-block" role="button">View Product</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    {{/grouped_each}}
    </div>
  </div>
</div>


