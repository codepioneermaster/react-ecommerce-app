{{> navbar this }}
<div class="container">
  <div class="row">
    {{#each products}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{img}}">
        <div class="caption">
          <h3>{{name}}</h3>
          <p class="price">${{price}}</p>
          <p><a href="/products/{{id}}" class="btn btn-primary" role="button">View Product</a> 
          <form method="POST" action="/cart/{{id}}">
            <label for="quantity">Select quantity</label>
            <select class="form-control" id="quantity" name="quantity">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
            <button class="btn btn-default" type="submit" value="Submit">Add To Cart</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

{{> footer }}
